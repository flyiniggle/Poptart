<!DOCTYPE html>
<html>
<head>
	<title>Poptart Node</title>
	<link href="/ui/css/ionicons/css/ionicons.min.css" rel="stylesheet" type="text/css"/>
	<link href="/ui/css/ignite/structure/infragistics.css" rel="stylesheet" type="text/css"/>
	<link href="/ui/css/ignite/themes/infragistics/infragistics.theme.css" rel="stylesheet"/>
	<link href="/ui/css/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" type="text/css"/>
	<link href="/ui/css/jquery-ui/custom/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" type="text/css"/>

	{% block css %}
		<link href="/ui/css/styles.min.css" rel="stylesheet" type="text/css"/>
		<link href="/ui/css/text.min.css" rel="stylesheet" type="text/css"/>
		<link href="/ui/css/forms.min.css" rel="stylesheet" type="text/css"/>
		<link href="/ui/css/override.min.css" rel="stylesheet" type="text/css"/>
	{% endblock %}
</head>
<body>
	<div id="controlsContainer">
		<div id="controls">
			<div id="mainNavMenuTarget">
				<h2 id="mainNavMenuTargetText" class="ion-android-exit">
					Go To
				</h2>
			</div>
			<div id="mainNavMenu">
				{% block main_nav %}
					<a class="navigationLink" href="/">Dashboard</a>
				{% endblock %}
			</div>
			<div id="ribbonMenuTabs">
				{% block controls %}
				{% endblock %}
			</div>
			<div id="ribbonMenuStack">
				{% block ribbonMenus %}
				{% endblock %}
			</div>
		</div>
	</div>

	<div id="leftSideBarFixed">
		<div id="leftSideBar">
			<div id="summary" class="panel">
				<div class="panelHeader">
					<h3>Summary:</h3>
				</div>
				<div id="summaryContent">
					{% block summary %}
					{% endblock %}
				</div>
			</div>
			<div id="alerts" class="panel">
				<div class="panelHeader">
					<h3>Alerts:</h3>
				</div>
				<div id="alertsContent">
					{% block alerts %}
						{% include "components/alerts/alerts.ninja" %}
					{% endblock %}
				</div>
			</div>
		</div>
	</div>

	<div id="main" class="panel">
		{% block main %}
		{% endblock %}
	</div>

	<!-- JS -->
	{% block js_libraries %}
		<script type="text/javascript" src="/ui/scripts/jquery-1.10.2.js"></script>
		<script type="text/javascript" src="/ui/scripts/jquery-ui-1.10.4.custom.js"></script>
		<script type="text/javascript" src="/ui/scripts/knockout-3.4.0.debug.js"></script>
		<script type="text/javascript" src="/ui/scripts/bluebird.js"></script>
		<script type="text/javascript" src="/ui/scripts/ignite/infragistics.loader.js"></script>
		<script type="text/javascript" src="/ui/scripts/nunjucks.js"></script>
	{% endblock %}

	{%  block js %}
		<script type="text/javascript" src="/ui/poptart.min.js"></script>
		<script type="text/javascript" src="/ui/components/Poptart.Alerts.min.js"></script>
		<script type="text/javascript" src="/ui/components/Poptart.Services.min.js"></script>
		<script type="text/javascript">
			Poptart.init()
		</script>
	{% endblock %}
</body>
</html>
