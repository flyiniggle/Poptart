<!DOCTYPE html>
<html>
<head>
	<title>Poptart Node</title>
	<link href="/css/infragistics/css/themes/infragistics/infragistics.theme.css" rel="stylesheet" type="text/css"/>
	<link href="/css/infragistics/css/structure/infragistics.css" rel="stylesheet" type="text/css"/>
	<link href="/css/ionicons/css/ionicons.min.css" rel="stylesheet" type="text/css"/>
	<link href="/css/jquery-ui/jquery-ui.structure.min.css" rel="stylesheet" type="text/css"/>
	<link href="/css/jquery-ui/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" type="text/css"/>

	{% block css %}
		<link href="/css/styles.css" rel="stylesheet" type="text/css"/>
		<link href="/css/text.css" rel="stylesheet" type="text/css"/>
	{% endblock %}
</head>
<body>
	<div id="controlsContainer">
		<div id="controls">
			<div id="mainNavMenuTarget">
				<h2 id="mainNavMenuTargetText" class="ion-android-exit">
					Go To:
				</h2>
			</div>
			<div id="mainNavMenu">
				{% block main_nav %}
					<a class="navigationLink" href="/">Dashboard</a>
				{% endblock %}
			</div>
			<div id="contextControls">
				{% block controls %}
				{% endblock %}
			</div>
		</div>
	</div>

	<div id="leftSideBarFixed">
		<div id="leftSideBar">
			<div id="summary" class="panel">
				<div class="panelHeader">
					<h3>Summary:</h3>
				</div>
				<div id="summaryContent">
					{% block summary %}
					{% endblock %}
				</div>
			</div>
			<div id="alerts" class="panel">
				<div class="panelHeader">
					<h3>Alerts:</h3>
				</div>
				<div id="alertsContent" data-bind="component:{ name: 'alerts', params: {alerts: [{summary:'blah', message:'blahmessage', severity:'error'}]}}">
					{% block alerts %}
						{% include "components/alerts/alerts.ninja" %}
					{% endblock %}
				</div>
			</div>
		</div>
	</div>

	<div id="main" class="panel">
		{% block main %}
		{% endblock %}
	</div>

	<!-- JS -->
	{% block js_libraries %}
		<script type="text/javascript" src="/scripts/jquery-1.10.2.js"></script>
		<script type="text/javascript" src="/scripts/jquery-ui-1.10.4.custom.js"></script>
		<script type="text/javascript" src="/scripts/knockout-3.4.0.debug.js"></script>
		<script type="text/javascript" src="/scripts/modernizr-custom.js"></script>
		<script type="text/javascript" src="/scripts/infragistics.js"></script>
		<script type="text/javascript" src="/scripts/nunjucks.js"></script>
	{% endblock %}

	{%  block js %}
		<script type="text/javascript" src="/scripts/poptart.js"></script>
		<script type="text/javascript" src="/components/Poptart.Alerts.js"></script>
		<script type="text/javascript">
			Poptart.init();
		</script>
	{% endblock %}
</body>
</html>
