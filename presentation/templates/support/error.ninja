{%  extends "BaseLayout.ninja" %}

{%  block main %}
	<h3>Oops! Something went horribly wrong:</h3>
	<h4>{{ summary }} - </h4>
	<div>
		<span>{{ message }}</span>
	</div>
	<div>
		<span>{{ stacktrace }}</span>
	</div>
	<div>
		<span>{{ method }}</span>
	</div>
	<div>
		<span>{{ path }}</span>
	</div>
{% endblock %}


message: error.message,
summary: error.summary,
stacktrace: error.stacktrace,
method: error.method,
path: error.path